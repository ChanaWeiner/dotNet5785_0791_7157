<Window x:Class="PL.TutorHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="TutorHome" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button FontSize="40" Visibility="{Binding NoCallInProgress,Converter={StaticResource ConvertBoolToVisibleKey}}"  Content="Choose Call" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="0,0,0,30" Click="BtnChooseCall_Click"/>
            <Button FontSize="40" Content="My Details" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="0,0,0,30" Click="BtnMyDetails_Click"/>
            <Button FontSize="40" Visibility="{Binding HasCallInProgress,Converter={StaticResource ConvertBoolToVisibleKey}}" Content="My Current Call" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="0,0,0,30" Click="BtnCurrentCall_Click"/>
            <Button FontSize="40" Visibility="{Binding HasCallsHistory,Converter={StaticResource ConvertBoolToVisibleKey}}" Content="Calls History" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Click="BtnCallsHistory_Click"/>
        </StackPanel>

    </Grid>
</Window>
