<Window x:Class="PL.Tutor.TutorListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Tutor"
        mc:Ignorable="d"
        Title="Tutor List"
        Width="800"
        Height="640"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Background="White">

    <Window.Resources>
        <!-- עיצוב מותאם לכפתור -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True"
                                >
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005EA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Drop shadow effect -->
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="6"
                          ShadowDepth="2"
                          Opacity="0.3"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Filter by Role:" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" FontSize="16" Height="30" SelectedValue="{Binding role, Mode=TwoWay}" SelectionChanged="FilterTutors" ItemsSource="{Binding Source={StaticResource RolesCollectionKey}}"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding TutorsList}"
                  SelectedItem="{Binding SelectedTutor}"
                  MouseDoubleClick="LsvTutorsList_MouseDoubleClickHandler"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  FontSize="16"
                  Margin="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"/>

        <!-- Add Button with style -->
        <Button Grid.Row="2"
                Content="Add"
                Click="ButtonAdd_Click"
                Style="{StaticResource ModernButtonStyle}"/>
    </Grid>
</Window>
