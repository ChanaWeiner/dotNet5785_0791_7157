<Window x:Class="PL.Tutor.TutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Tutor"
        mc:Ignorable="d"
        Title="TutorWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        >

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- 16 שורות - אחת לכל תכונה -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Id (רק לקריאה) -->
                <Label Grid.Row="0" Grid.Column="0" Content="Id" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentTutor.Id}" Margin="5" IsReadOnly="{Binding IdIsReadOnly}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="FullName" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentTutor.FullName}" Margin="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="CellNumber" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentTutor.CellNumber}" Margin="5"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Email" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentTutor.Email}" Margin="5"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Password" Margin="5"  Visibility="{Binding IsFromTutorWindow, Converter={StaticResource BoolInverseConverterKey}}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Visibility="{Binding IsFromTutorWindow, Converter={StaticResource BoolInverseConverterKey}}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="CurrentAddress" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CurrentTutor.CurrentAddress}" Margin="5"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Role" Margin="5"/>
                <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Source={StaticResource RolesCollectionKey}}" SelectedItem="{Binding CurrentTutor.Role}" Margin="5" IsEnabled="{Binding IsFromTutorWindow, Converter={StaticResource InverseBooleanConverterKey}}" />

                <Label Grid.Row="7" Grid.Column="0" Content="Active" Margin="5"/>
                <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding CurrentTutor.Active}" Margin="5" IsEnabled="{Binding NotHasCallInProgress}" />

                <Label Grid.Row="8" Grid.Column="0" Content="Distance" Margin="5"/>
                <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding CurrentTutor.Distance}" Margin="5"/>

                <Label Grid.Row="9" Grid.Column="0" Content="DistanceType" Margin="5"/>
                <ComboBox Grid.Row="9" Grid.Column="1" ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" SelectedItem="{Binding CurrentTutor.DistanceType}" Margin="5"/>

                <Label Grid.Row="10" Grid.Column="0" Content="TotalCallsHandled" Margin="5" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}"/>
                <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsHandled}" Margin="5" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}"/>

                <Label Grid.Row="11" Grid.Column="0" Content="TotalCallsSelfCanceled" Margin="5" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}"/>
                <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsSelfCanceled}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}" Margin="5"/>

                <Label Grid.Row="12" Grid.Column="0" Content="TotalCallsExpired" Margin="5" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}"/>
                <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsExpired}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}" Margin="5"/>
                <StackPanel Grid.Row="13" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center"
            Visibility="{Binding IsFromTutorWindow, Converter={StaticResource BoolInverseConverterKey}}">

                    <Label Content="Call in treatment" Margin="5" VerticalAlignment="Center"/>

                    <Button Content="Display call" Height="40" Width="100" Margin="5"
            Click="BtnDisplayCall_Click"
            Visibility="{Binding CurrentTutor.CurrentCallInProgress, Converter={StaticResource ConvertCurrentCallToVisibleKey}}"/>


                </StackPanel>
                <StackPanel Grid.Row="14" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{Binding ButtonText}"  HorizontalAlignment="Center" Height="50" Width="100" Click="BtnAddOrUpdate_Click"/>
                    <Button Grid.Column="1" Content="Delete" Height="40" Width="100" Margin="5"
                        Click="BtnDelete_Click"
                        Visibility="{Binding ButtonText, Converter={StaticResource ConvertDeleteToVisibleKey}}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
