<Window x:Class="PL.Tutor.TutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Tutor"
        mc:Ignorable="d"
        Title="TutorWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        >

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- 16 שורות - אחת לכל תכונה -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Id (רק לקריאה) -->
                <Label Grid.Row="0" Grid.Column="0" Content="Id" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentTutor.Id}" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="FullName" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentTutor.FullName}" Margin="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="CellNumber" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentTutor.CellNumber}" Margin="5"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Email" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentTutor.Email}" Margin="5"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Password" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CurrentTutor.Password}" Margin="5"/>

                <Label Grid.Row="5" Grid.Column="0" Content="CurrentAddress" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CurrentTutor.CurrentAddress}" Margin="5"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Latitude" Margin="5"/>
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CurrentTutor.Latitude}" Margin="5"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Longitude" Margin="5"/>
                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CurrentTutor.Longitude}" Margin="5"/>

                <Label Grid.Row="8" Grid.Column="0" Content="Role" Margin="5"/>
                <ComboBox Grid.Row="8" Grid.Column="1" ItemsSource="{Binding Source={StaticResource RolesCollectionKey}}" SelectedItem="{Binding Role}" Margin="5"/>

                <Label Grid.Row="9" Grid.Column="0" Content="Active" Margin="5"/>
                <CheckBox Grid.Row="9" Grid.Column="1" IsChecked="{Binding CurrentTutor.Active}" Margin="5"/>

                <Label Grid.Row="10" Grid.Column="0" Content="Distance" Margin="5"/>
                <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding CurrentTutor.Distance}" Margin="5"/>

                <Label Grid.Row="11" Grid.Column="0" Content="DistanceType" Margin="5"/>
                <ComboBox Grid.Row="11" Grid.Column="1" ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" SelectedItem="{Binding CurrentTutor.DistanceType}" Margin="5"/>

                <Label Grid.Row="12" Grid.Column="0" Content="TotalCallsHandled" Margin="5"/>
                <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsHandled}" Margin="5"/>

                <Label Grid.Row="13" Grid.Column="0" Content="TotalCallsSelfCanceled" Margin="5"/>
                <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsSelfCanceled}" Margin="5"/>

                <Label Grid.Row="14" Grid.Column="0" Content="TotalCallsExpired" Margin="5"/>
                <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding CurrentTutor.TotalCallsExpired}" Margin="5"/>

                <Label Grid.Row="15" Grid.Column="0" Content="CurrentCallInProgress" Margin="5"/>
                <TextBox Grid.Row="15" Grid.Column="1" Text="{Binding CurrentTutor.CurrentCallInProgress}" Margin="5"/>
                <Button Grid.Row="16" Content="{Binding ButtonText}"  HorizontalAlignment="Center" Height="50" Width="100" Click="btnAddOrUpdate_Click"/>
                <Button Grid.Row="16" Grid.Column="1" Content="Delete"  HorizontalAlignment="Center" Height="50" Width="100" Click="btnDelete_Click"
                        <!--Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"-->/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
